@model IEnumerable<Goal_Mate.Models.UserTask>

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Priority</th>
            <th>Created At</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any ())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@(item.IsCompleted ? "Yes" : "No")</td>
                    <td>@item.Priority</td>
                    <td>@item.CreatedAt.ToString( "dd/MM/yyyy" )</td>
                    <td>@item.DueDate?.ToString( "dd/MM/yyyy" )</td>
                    <td>@item.Category?.Title</td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TaskId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TaskId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No tasks found.</td>
            </tr>
        }
    </tbody>
</table>
